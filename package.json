{
	"name": "codesnip-vscode",
	"displayName": "codesnip-vscode",
	"description": "dynamic snippets for rust",
	"publisher": "to-omer",
	"repository": {
		"type": "git",
		"url": "https://github.com/to-omer/codesnip-vscode.git"
	},
	"version": "0.0.10",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:rust"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "codesnip",
			"properties": {
				"codesnip.source": {
					"type": "array",
					"default": [],
					"format": "uri",
					"description": "snippet source: e.g. [\"your-library/src/lib.rs\"]"
				},
				"codesnip.cfg": {
					"type": "array",
					"default": [],
					"description": "snippet parse option: --cfg="
				},
				"codesnip.filterItem": {
					"type": "array",
					"default": [],
					"description": "snippet parse option: --filter-item="
				},
				"codesnip.filterAttr": {
					"type": "array",
					"default": [],
					"description": "snippet parse option: --filter-attr="
				},
				"codesnip.minify": {
					"type": "boolean",
					"default": false,
					"description": "snippet format option to minify"
				},
				"codesnip.insertionPosition": {
					"type": "string",
					"enum": [
						"last",
						"cursor"
					],
					"default": "last",
					"description": "where to insert the snippet"
				},
				"codesnip.notHide": {
					"type": "boolean",
					"default": false,
					"description": "snippet list option: --not-hide"
				},
				"codesnip.verify.toolchain": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "toolchain for verify"
				},
				"codesnip.verify.edition": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "edition for verify"
				},
				"codesnip.verify.verbose": {
					"type": "boolean",
					"default": false,
					"description": "verbose when verify"
				}
			}
		},
		"commands": [
			{
				"command": "codesnip-vscode.bundle",
				"category": "Codesnip",
				"title": "Bundle"
			},
			{
				"command": "codesnip-vscode.updateCache",
				"category": "Codesnip",
				"title": "Update Cache"
			},
			{
				"command": "codesnip-vscode.verifySnippets",
				"category": "Codesnip",
				"title": "Verify Snippets"
			}
		],
		"keybindings": [
			{
				"command": "codesnip-vscode.bundle",
				"key": "ctrl+alt+b",
				"when": "editorTextFocus && editorLangId == rust"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.1",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^8.23.0",
		"@typescript-eslint/parser": "^8.23.0",
		"eslint": "^9.19.0",
		"glob": "^11.0.1",
		"mocha": "^11.1.0",
		"typescript": "^5.7.3",
		"@vscode/test-electron": "^2.4.1"
	}
}
